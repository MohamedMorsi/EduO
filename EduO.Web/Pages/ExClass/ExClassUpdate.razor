*@
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </div>
    </EditForm>
    <SuccessNotification @ref="_notification" />
}

@code {

    private ExClassDto _exclass;
    private SuccessNotification _notification;
    [Inject]
    IBaseService<ExClassDto> ExClassService { get; set; }

    [Parameter]
    public int id { get; set; }

    protected async override Task OnInitializedAsync()
    {
        _exclass = await ExClassService.GetByIdAsync(id);
    }

    private async Task Update()
    {
        await ExClassService.Update(_exclass);
        _notification.Show();
    }
    @*private void AssignImageUrl(string imgUrl) => _grade.ImageUrl = imgUrl;*@
}
