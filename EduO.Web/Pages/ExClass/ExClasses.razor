@page "/exclasses"

<h2>Exclass</h2>

<MudPaper Class="pa-5 ma-1">

    <div class="row" style="margin-bottom:10px;">
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="CreateNew"  Size="Size.Small" />

    </div>

    <div class="row">
        <div class="col">
            <ExClassTable ExClasses="ExClassDtoList" OnDeleted="DeleteExClass" />
        </div>
    </div>

</MudPaper>


@code {

    [Inject]
    public IBaseService<ExClassDto> ExClassService { get; set; }

    [Inject]
    public NavigationManager NavigationManager { get; set; }

    public List<ExClassDto> ExClassDtoList { get; set; } = new List<ExClassDto>();

    protected async override Task OnInitializedAsync()
    {
        ExClassDtoList = await ExClassService.GetAllAsync();
        //just for testing
        foreach (var exclass in ExClassDtoList)
        {
            //Console.WriteLine(exclass.Name);
        }
    }

    private async Task GetExclasses()
    {
        ExClassDtoList = await ExClassService.GetAllAsync();
    }

    private async Task CreateNew()
    {
        NavigationManager.NavigateTo("exclasses/createexClass");
    }

    private async Task DeleteExClass(int id)
    {
        await ExClassService.Delete(id);
        //_productParameters.PageNumber = 1;
        await GetExclasses();
        StateHasChanged();
        //NavigationManager.NavigateTo("/exclasses");
    }

}
