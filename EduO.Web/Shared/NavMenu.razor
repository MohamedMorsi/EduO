<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
    <MudDrawerHeader>
        <MudAvatar Color="Color.Transparent" Size="Size.Large" Image="assets/Logo-CodeMaze.png" />
        <MudText Typo="Typo.h5" Color="Color.Primary" Style="margin-top:10px; margin-left:15px;">Edu O</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.Dashboard">DashBoard</MudNavLink>
        
        <MudNavGroup Title="Admin" Icon="@Icons.Filled.DashboardCustomize" Expanded="true">
            <MudNavLink Href="/grades" Icon="@Icons.Filled.Storage">Gardes</MudNavLink>
            <MudNavLink Href="/teachers" Icon="@Icons.Filled.Storage">Teachers</MudNavLink>
            <MudNavLink Href="students" Icon="@Icons.Filled.Storage">Students</MudNavLink>
            <MudNavLink Href="/fees" Icon="@Icons.Filled.Storage">Fees</MudNavLink>
        </MudNavGroup>


        <MudNavGroup Title="Example" Icon="@Icons.Filled.DashboardCustomize" Expanded="true">
            <MudNavLink Href="#" Icon="@Icons.Filled.Camera">Photos</MudNavLink>
            <MudNavLink Href="#" Icon="@Icons.Filled.Celebration">Party</MudNavLink>
        </MudNavGroup>

        <MudNavLink Href="/exclasses" Icon="@Icons.Filled.Storage">ExClass</MudNavLink>
        
    </MudNavMenu>
</MudDrawer>



