@inject IDialogService DialogService

@if (Grades.Count > 0)
{
    <MudTable Items="@Grades" Hover="true" FixedHeader="true" Height="@(Grades.Count > 0 ? "400px":"")">
        <HeaderContent>
            <MudTh>#</MudTh>
            <MudTh>Name</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="#">@context.Id</MudTd>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Actions">
                <MudFab Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.Edit"  Size="Size.Small"
                    OnClick="@(()=>RedirectToUpdate(@context.Id))"/>
                <MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Delete" Size="Size.Small" 
                    OnClick="@(()=>DeleteDialog(@context.Id))"/>
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager PageSizeOptions="new int[]{50, 100}" />
        </PagerContent>
    </MudTable>
}

else
{
    <span>
        Loading exclass...
    </span>
}

